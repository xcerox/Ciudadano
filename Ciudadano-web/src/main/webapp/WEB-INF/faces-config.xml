<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.0"
              xmlns="http://java.sun.com/xml/ns/javaee" 
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
              xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd">
    <managed-bean>
        <description>Controlador del ciudadano</description>
        <managed-bean-name>ciudadanoController</managed-bean-name>
        <managed-bean-class>org.ciudadano.web.controller.CiudadanoController</managed-bean-class>
        <managed-bean-scope>view</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <description>Creacion de un nuevo ciudadano</description>
        <managed-bean-name>controllerNewCiudadano</managed-bean-name>
        <managed-bean-class>org.ciudadano.web.controller.ControllerNewCiudadano</managed-bean-class>
        <managed-bean-scope>view</managed-bean-scope>
    </managed-bean>
</faces-config>
